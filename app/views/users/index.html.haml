%p#notice= notice
%h1 Users
%table
  %thead
    %tr
      %th Email
      %th Firstname
      %th Lastname
      %th Street
      %th Street2
      %th City
      %th Zip
      %th Country
      %th Phone
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.firstname
        %td= user.lastname
        %td= user.street
        %td= user.street2
        %td= user.city
        %td= user.zip
        %td= user.country
        %td= user.phone
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
