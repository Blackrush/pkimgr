%p#notice= notice
%h1 Certificates
%table
  %thead
    %tr
      %th Issuer
      %th Subject
      %th Profile
      %th Pem
      %th Revoked at
      %th{:colspan => "3"}
  %tbody
    - @certificates.each do |certificate|
      %tr
        %td= certificate.issuer
        %td= certificate.subject
        %td= certificate.profile
        %td= certificate.pem
        %td= certificate.revoked_at
        %td= link_to 'Show', certificate
        %td= link_to 'Edit', edit_certificate_path(certificate)
        %td= link_to 'Destroy', certificate, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Certificate', new_certificate_path
