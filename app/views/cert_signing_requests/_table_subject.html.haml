%table.table.table-hover
  %thead
    %tr
      %th Issuer
      %th Name
      %th Profile
      %th Requested
      %th
  %tbody
    - csrs.each do |csr|
      - csr.issuers.each do |issuer|
        %tr
          %td= render issuer
          %td= csr.name
          %td= csr.profile.name
          %td.timetz= csr.created_at.rfc2822
          %td
            = link_to cancel_authority_cert_signing_request_path(issuer, csr), class: "btn" do
              %i.fa.fa-times
              Cancel
