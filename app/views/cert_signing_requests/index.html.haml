%p#notice= notice
%h1 Cert Signing Requests
%table
  %thead
    %tr
      %th Subject
      %th Profile
      %th Pem
      %th{:colspan => "3"}
  %tbody
    - @cert_signing_requests.each do |cert_signing_request|
      %tr
        %td= cert_signing_request.subject
        %td= cert_signing_request.profile
        %td= cert_signing_request.pem
        %td= link_to 'Show', cert_signing_request
        %td= link_to 'Edit', edit_cert_signing_request_path(cert_signing_request)
        %td= link_to 'Destroy', cert_signing_request, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Cert Signing Request', new_cert_signing_request_path
