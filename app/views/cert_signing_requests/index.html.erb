<p id="notice"><%= notice %></p>

<h1>Cert Signing Requests</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Profile</th>
      <th>Pem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cert_signing_requests.each do |cert_signing_request| %>
      <tr>
        <td><%= cert_signing_request.subject %></td>
        <td><%= cert_signing_request.profile %></td>
        <td><%= cert_signing_request.pem %></td>
        <td><%= link_to 'Show', cert_signing_request %></td>
        <td><%= link_to 'Edit', edit_cert_signing_request_path(cert_signing_request) %></td>
        <td><%= link_to 'Destroy', cert_signing_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cert Signing Request', new_cert_signing_request_path %>
