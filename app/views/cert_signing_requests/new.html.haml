= form_tag start_create_cert_signing_requests_path, method: "post" do
  = hidden_field_tag :issuer_id, @issuer.id

  .form-group.row
    = label_tag :subject_pubid, "Subject", class: "col-md-2"
    .col-md-10.radio-buttons
      = collection_radio_buttons nil, :subject_pubid, @subjects, :pubid, :name

  .actions.row
    .col-md
      %button.btn.btn-primary{:type => "submit"}
        %i.fa.fa-arrow-right
        Continue

    .col-md.text-right-md
      = link_to request.referer, class: "btn btn-light" do
        %i.fa.fa-arrow-left
        Back
