.row
  .col-md
    %h1
      %i.fa.fa-unlock-alt
      Admin Zone
      %small
        %i.fa.fa-angle-double-right.fa-xs
        Users
  .col-md.text-right-md.align-bottom
    = link_to new_admin_user_path, class: "btn btn-light" do
      %i.fa.fa-user-plus
      Create Account

%table.table.table-hover
  %thead
    %tr
      %th Name
      %th E-mail
      %th Phone
      %th Has Admin Rights?
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= render user
        %td= link_to user.email, "mailto:#{user.email}"
        %td= link_to user.phone, "tel:#{user.phone}"
        %td
          - if user.admin?
            Is Admin
            %i.fa.fa-check
        %td
          = link_to edit_admin_user_path(user), class: "btn" do
            %i.fa.fa-edit
            Edit Account

          = link_to admin_user_path(user), class: "btn", data: {method: "delete"} do
            %i.fa.fa-user-times
            Destroy Account
